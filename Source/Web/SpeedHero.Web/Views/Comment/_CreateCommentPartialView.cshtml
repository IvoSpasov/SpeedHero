@model SpeedHero.Web.InputModels.Comments.CreateCommentInputModel

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Comment == "Invalid")
        {
            <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>No text in the comment field</strong>
            </div>
        }
    </div>
    <div class="col-md-12">
        @using (Ajax.BeginForm("CreateComment", "Comment", new { PostId = Model.PostId },
    new AjaxOptions
    {
        UpdateTargetId = "comments-section",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",

    }, new { role = "form", id = "searchForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @(Html.Kendo().Editor()
            .Name("Content")
            .Encode(true)
            .HtmlAttributes(new { style = "width: 80%; height:200px" }))
            </div>
            <div class="form-group">
                <input type="submit" value="Post comment" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

@Html.Action("ShowComments", "Comment", new { postId = Model.PostId })