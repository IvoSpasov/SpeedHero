@model SpeedHero.Web.InputModels.Comments.CreateCommentInputModel

@using (Ajax.BeginForm("CreateComment", "Comment", new { PostId = Model.PostId },
    new AjaxOptions
    {
        UpdateTargetId = "all-comments",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST"
    }, new { role = "form", id = "searchForm" }))
{
    <div class="form-group">
        @(Html.Kendo().Editor()
            .Name("Content")
            .Encode(true)
            .HtmlAttributes(new { style = "width: 80%; height:200px" }))
    </div>
    <div class="form-group">
        <input type="submit" value="Post comment" class="btn btn-primary" />
    </div>
}

