@model IEnumerable<SpeedHero.Web.ViewModels.Comments.ShowCommentViewModel>

@{
    if (Model.Count() > 0)
    {
        foreach (var comment in Model)
        {
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Posted on: @comment.CreatedOn
                            <br />
                            Author: @comment.AuthorName
                        </div>
                        <div class="panel-body">
                            @Html.Raw(comment.Content)
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-sm-12">
                <p class="text-warning">No comments yet.</p>
            </div>
        </div>
    }
}