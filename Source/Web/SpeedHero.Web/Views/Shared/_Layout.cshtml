<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SpeedHero</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/custom")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <img src="/Content/Img/Logo-Transparent.png" class="img-responsive">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("All Posts", "Index", "AllPosts", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li>@Html.RouteLink("About", new { action = "About", area = "" })</li>*@
                    <li>@Html.RouteLink("Create Post", new { action = "CreatePost", area = "" })</li>
                    <li>@Html.ActionLink("Administration", "Index", "Post", new { area = "Administration" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <div class="container">
        <div class="row">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SpeedHero</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
