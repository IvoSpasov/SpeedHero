@model SpeedHero.Web.ViewModels.Posts.ShowPostViewModel
@using SpeedHero.Common

@{
    ViewBag.Title = Model.Title;
}

@if (TempData["SuccessfullNewPost"] != null)
{
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <strong>@TempData["SuccessfullNewPost"]</strong>
            </div>
        </div>
    </div>
}

<div class="row">
    <img src="@Model.CoverPhotoPath" class="img-responsive center-block">
</div>
<div class="row">
    <div class="col-sm-12">
        <h2>@Model.Title</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 text-right text-primary">
        by @Html.DisplayFor(p => p.AuthorName)
    </div>
</div>
<div class="row">
    <div class="col-sm-12 text-right text-primary">
        @Html.DisplayFor(p => p.CreatedOn) - @Model.NumberOfComments
        @{
            if (Model.NumberOfComments == 1)
            {
                @:Comment
            }
            else
            {
                @:Comments
            }
        }
    </div>
</div>
<div class="row margin-15 content">
    <div class="col-sm-12">
        @Html.Raw(Model.Content)
    </div>
</div>

<div id="comments-section">
    @Html.Action("CreateComment", "Comment", new { postId = Model.Id })
</div>

@if (User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <div class="row">
        <div class="col-sm-12">
            @Html.ActionLink("Edit post", "Edit", "Posts", new { area = "Administration", id = Model.Id, returnUrl = "/ShowPost/" + Model.Id }, new { @class = "btn btn-primary" })
        </div>
    </div>
}

@section styles{
    @Styles.Render("~/Content/kendo")
}

@section scripts{
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/jqueryAjax")
    @*@Scripts.Render("~/bundles/jqueryForm")*@
}