@model SpeedHero.Web.Areas.Administration.ViewModels.Comments.EditCommentViewModel
@{

    ViewBag.Title = "EditComment";
}

<h2>EditComment</h2>

@using (Html.BeginForm("Edit", "Comments", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @(Html.Kendo().Editor()
                        .Name("Content")
                        .Encode(false)
                        .HtmlAttributes(new { style = "width: 80%; height:200px" }))
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}
