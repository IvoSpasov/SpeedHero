@model SpeedHero.Web.Areas.Administration.ViewModels.Comments.EditCommentViewModel
@{

    ViewBag.Title = "Edit comment";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Comments", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <div class="col-sm-12">
            @(Html.Kendo().Editor()
                        .Name("Content")
                        .Encode(false)
                        .HtmlAttributes(new { style = "width: 80%; height:200px" }))
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6">
            @Html.ActionLink("Cancel", "Details", "Posts", new { id = ViewBag.PostId }, new { @class = "btn btn-default btn-block" })
        </div>
        <div class="col-sm-6">
            <input type="submit" value="Save" class="btn btn-primary btn-block" />
        </div>
    </div>
}
